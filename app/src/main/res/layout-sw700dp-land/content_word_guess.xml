<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

   <fragment
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:name="com.ahmadalhaiqi.vocabgame.GuessSettingsActivityFragment"
      android:id="@+id/settingsActivityFragment"
      android:layout_weight="1"
       tools:layout="@layout/fragment_settings" />

   <fragment
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:name="com.ahmadalhaiqi.vocabgame.WordGuessActivityFragment"
      android:id="@+id/quessFragment"
      android:layout_weight="2"
      tools:layout="@layout/fragment_word_guess"/>
</LinearLayout>